@model List<NS.MongoTransaction.Common.Entities.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<div class="general-wrapper">
    <h2 class="caption">Current Users</h2>
    <table data-width="absolute">
        <thead>
            <tr>
                <th>Username</th>
                <th>First name</th>
                <th>Last Name</th>
                <th>Personal Number</th>
                <th>Birth Date</th>
                <th>Mobile</th>
                <th>Balance</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.PersonalNumber</td>
                    <td>@user.BirthDate.ToShortDateString()</td>
                    <td>@user.UserInfo.Mobile</td>
                    <td>@user.UserWallet.Balance</td>
                </tr> 
            }
        </tbody>
    </table>
    <table data-width="768" class="responsive-table">
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>Username</td>
                    <td>@user.Username</td>
                </tr> 
                <tr>
                    <td>First name</td>
                    <td>@user.FirstName</td>
                </tr>
                <tr>
                    <td>Last name</td>
                    <td>@user.LastName</td>
                </tr> 
                <tr>
                    <td>Personal number</td>
                    <td>@user.PersonalNumber</td>
                </tr>
                <tr>
                    <td>Birth date</td>
                    <td>@user.BirthDate.ToShortDateString()</td>
                </tr> 
                <tr>
                    <td>Mobile</td>
                    <td>@user.UserInfo.Mobile</td>
                </tr>
                <tr>
                    <td>Balance</td>
                    <td>@user.UserWallet.Balance</td>
                </tr>
                <tr>
                    <td style="border:none"></td>
                    <td style="border:none"></td>
                </tr>
            }
        </tbody>
    </table>
</div>